@model Glowify.Models.ViewModels.DashboardVM

<div class="container-fluid p-4 bg-light min-vh-100">
    <div class="row pb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h2 class="text-dark fw-bold mb-0">Overview</h2>
                <p class="text-muted mb-0">Welcome back to Glowify Admin</p>
            </div>
            <div>
                <span class="badge bg-white text-dark border p-2 shadow-sm rounded-pill px-3">
                    <i class="bi bi-calendar3"></i> @DateTime.Now.ToString("dd MMM yyyy")
                </span>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card border-0 rounded-4 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-muted fw-semibold mb-0">Total Users</h6>
                        <div class="bg-primary bg-opacity-10 text-primary p-2 rounded-3">
                            <i class="bi bi-people-fill fs-5"></i>
                        </div>
                    </div>
                    <h2 class="display-6 fw-bold text-dark mb-0">@Model.TotalUsers</h2>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card border-0 rounded-4 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-muted fw-semibold mb-0">Total Orders</h6>
                        <div class="bg-success bg-opacity-10 text-success p-2 rounded-3">
                            <i class="bi bi-box-seam fs-5"></i>
                        </div>
                    </div>
                    <h2 class="display-6 fw-bold text-dark mb-0">@Model.TotalOrders</h2>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card border-0 rounded-4 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-muted fw-semibold mb-0">Pending Orders</h6>
                        <div class="bg-warning bg-opacity-10 text-warning p-2 rounded-3">
                            <i class="bi bi-hourglass-split fs-5"></i>
                        </div>
                    </div>
                    <h2 class="display-6 fw-bold text-dark mb-0">@Model.PendingOrders</h2>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card border-0 rounded-4 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-muted fw-semibold mb-0">Total Revenue</h6>
                        <div class="bg-info bg-opacity-10 text-info p-2 rounded-3">
                            <i class="bi bi-currency-dollar fs-5"></i>
                        </div>
                    </div>
                    <h2 class="display-6 fw-bold text-dark mb-0">@Model.TotalRevenue.ToString("c")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8 mb-4">
            <div class="card border-0 rounded-4 shadow-sm h-100">
                <div class="card-header bg-white border-0 pt-4 pb-0 px-4">
                    <h5 class="fw-bold text-dark mb-0">30-Day Revenue Trend</h5>
                </div>
                <div class="card-body px-4 pb-4">
                    <div style="height: 300px; width: 100%;">
                        <canvas id="salesTrendChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card border-0 rounded-4 shadow-sm h-100">
                <div class="card-header bg-white border-0 pt-4 pb-0 px-4">
                    <h5 class="fw-bold text-dark mb-0">Order Status</h5>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center px-4 pb-4">
                    <div style="height: 250px; width: 100%; position: relative;">
                        <canvas id="orderStatusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card border-0 rounded-4 shadow-sm">
                <div class="card-header bg-white border-bottom pt-4 pb-3 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-dark mb-0">Top 5 Best Sellers</h5>
                    <i class="bi bi-trophy-fill text-warning fs-5"></i>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush rounded-bottom-4">
                        @if (Model.TopProducts != null && Model.TopProducts.Any())
                        {
                            foreach (var item in Model.TopProducts)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center px-4 py-3 border-bottom-0">
                                    <span class="text-dark fw-medium">@item.ProductName</span>
                                    <span class="badge bg-light text-dark border px-3 py-2 rounded-pill shadow-sm">
                                        @item.TotalSold Units Sold
                                    </span>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item px-4 py-4 text-center text-muted">No sales data available yet.</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card border-0 rounded-4 shadow-sm h-100">
                <div class="card-header bg-white border-bottom pt-4 pb-3 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-dark mb-0">Top 5 Customers</h5>
                    <i class="bi bi-person-hearts text-danger fs-5"></i>
                </div>
                <div class="card-body px-4 pb-4">
                    <div style="height: 250px; width: 100%;">
                        <canvas id="topCustomersChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        $(document).ready(function () {
            loadOrderStatusChart();
            loadSalesTrendChart();
            loadTopCustomersChart();
        });

        function loadOrderStatusChart() {
            $.ajax({
                type: "GET",
                url: "/Admin/Dashboard/GetOrderStatusData",
                success: function (response) {
                    var ctx = document.getElementById('orderStatusChart').getContext('2d');
                    var chart = new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: response.labels,
                            datasets: [{
                                data: response.data,
                                backgroundColor: [
                                    '#ffc107', '#0d6efd', '#17a2b8', '#6610f2', '#198754', '#dc3545', '#fd7e14'
                                ],
                                borderWidth: 0 
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false, 
                            plugins: {
                                legend: { position: 'bottom' }
                            },
                            cutout: '70%' 
                        }
                    });
                }
            });
        }

        function loadSalesTrendChart() {
            $.ajax({
                type: "GET",
                url: "/Admin/Dashboard/GetSalesTrendData",
                success: function (response) {
                    var ctx = document.getElementById('salesTrendChart').getContext('2d');
                    var chart = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: response.labels,
                            datasets: [{
                                label: 'Revenue (₺)',
                                data: response.data,
                                borderColor: '#0d6efd',
                                backgroundColor: 'rgba(13, 110, 253, 0.1)', 
                                borderWidth: 3,
                                fill: true,
                                tension: 0.4,
                                pointBackgroundColor: '#fff', 
                                pointBorderColor: '#0d6efd',
                                pointRadius: 4
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false, 
                            plugins: { legend: { display: false } },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: { borderDash: [5, 5] } 
                                },
                                x: {
                                    grid: { display: false } 
                                }
                            }
                        }
                    });
                }
            });
        }

        function loadTopCustomersChart() {
            $.ajax({
                type: "GET",
                url: "/Admin/Dashboard/GetTopCustomerData",
                success: function (response) {
                    var ctx = document.getElementById('topCustomersChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: response.labels,
                            datasets: [{
                                label: 'Total Spent (₺)',
                                data: response.data,
                                backgroundColor: 'rgba(25, 135, 84, 0.8)',
                                borderRadius: 6,
                                barPercentage: 0.6
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: { legend: { display: false } },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: { borderDash: [5, 5] }
                                },
                                x: {
                                    grid: { display: false }
                                }
                            }
                        }
                    });
                }
            });
        }
    </script>
}