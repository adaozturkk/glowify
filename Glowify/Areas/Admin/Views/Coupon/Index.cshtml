@model IEnumerable<Coupon>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Coupon List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Coupon
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped table-hover" style="width:100%">
        <thead>
            <tr>
                <th>Code</th>
                <th>Discount Amount</th>
                <th>Min Amount</th>
                <th>Status</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coupon in Model)
            {
                <tr>
                    <td class="fw-bold">@coupon.Code</td>
                    <td>@coupon.DiscountAmount.ToString("c")</td>
                    <td>@coupon.MinAmount.ToString("c")</td>
                    <td>
                        @if (coupon.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Passive</span>
                        }
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Coupon" asp-action="Edit" asp-route-id="@coupon.Id" class="btn btn-secondary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Coupon" asp-action="Delete" asp-route-id="@coupon.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>