@{
    ViewData["Title"] = "Coupon List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Coupon List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Coupon
            </a>
        </div>
    </div>

    <div class="row pb-3 mt-3">
        <div class="col-12">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary active" onclick="filterTable('all', this)">All</button>
                <button type="button" class="btn btn-outline-success" onclick="filterTable('Active', this)">Active</button>
                <button type="button" class="btn btn-outline-danger" onclick="filterTable('Passive', this)">Passive</button>
            </div>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Code</th>
                <th>Discount Amount</th>
                <th>Minimum Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/coupon.js"></script>
}