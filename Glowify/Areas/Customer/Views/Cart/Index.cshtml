@model Glowify.Models.ViewModels.ShoppingCartVM

<form method="post">
	<div class="card shadow border-0 mt-4 container">
		<div class="card-header bg-secondary bg-gradient text-light py-4">
			<div class="row">
				<div class="col-12 text-center">
					<h3 class="text-white text-uppercase">Shopping Cart</h3>
				</div>
			</div>
		</div>

		<div class="card-body my-4">
			@if (Model.ShippingCost > 0)
			{
				<div class="alert alert-warning" role="alert">
					Add <strong>@((1000 - (Model.OrderTotal - Model.ShippingCost)).ToString("c"))</strong> more to get <span class="fw-bold">Free Shipping!</span>
				</div>
			}
			<div class="row mb-3 pb-3">
				<div class="col-md-2 offset-md-1">
					<a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary text-uppercase mb-5 btn-sm">
						<small>Continue Shopping</small>
					</a>
				</div>

				<div class="col-md-10 offset-md-1">
					@foreach (var item in Model.ShoppingCartList)
					{
						<div class="row border-bottom pb-3">
							<div class="d-none d-lg-block col-lg-1 text-center py-2">
								<img src="@item.Product.ImageUrl" class="rounded" width="100%" />
							</div>
							<div class="col-12 col-lg-6 pt-md-3">
								<h5 class="text-uppercase text-secondary"><strong>@item.Product.Name</strong></h5>
								<p><small>@item.Product.Description</small></p>
							</div>
							<div class="col-12  col-lg-5 text-center row">
								<div class="col-3 text-md-right pt-2 pt-md-4">
									<h6 class="fw-semibold">
										@item.Product.Price.ToString("c")
										<span class="text-muted">x</span> @item.Count
									</h6>
								</div>
								<div class="col-6 col-sm-4 col-lg-6 pt-2">
									<div class="w-75 btn-group" role="group">
										<a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-outline-primary bg-gradient py-2">
											<i class="bi bi-dash-square"></i>
										</a>

										@if (item.Count < item.Product.Stock)
										{
											<a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-outline-primary bg-gradient py-2">
												<i class="bi bi-plus-square"></i>
											</a>
										}
										else
										{
											<button disabled class="btn btn-outline-secondary bg-gradient py-2" style="cursor: not-allowed; opacity: 0.5;">
												<i class="bi bi-plus-square"></i>
											</button>
										}
									</div>
								</div>
								<div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
									<a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger bg-gradient py-2">
										<i class="bi bi-trash-fill"></i>
									</a>
								</div>
							</div>
						</div>
					}

					<div class="row pt-4">
						<div class="col-md-5 offset-md-5">
							<ul class="list-group mb-4">
								<li class="list-group-item d-flex justify-content-between align-items-center">
									<h5 class="fw-bold text-secondary">Shipping</h5>
									@if (Model.ShippingCost > 0)
									{
										<h4 class="fw-bolder">@Model.ShippingCost.ToString("c")</h4>
									}
									else
									{
										<h4 class="fw-bolder">Free</h4>
									}
								</li>

								<li class="list-group-item d-flex flex-column bg-light">
									@if (Model.Coupon != null && Model.Coupon.DiscountAmount > 0)
									{
										<div class="d-flex justify-content-between align-items-center w-100">
											<div>
												<h6 class="text-success fw-bold my-0">@Model.Coupon.Code Applied!</h6>
												<small class="text-muted">Discount</small>
											</div>
											<span class="text-success fw-bold">-@Model.Coupon.DiscountAmount.ToString("c")</span>
										</div>
										<button type="submit" asp-action="RemoveCoupon" class="btn btn-sm btn-outline-danger mt-2 w-100">
											Remove Coupon
										</button>
									}
									else
									{
										<div class="input-group">
											<input asp-for="CouponCode" class="form-control" placeholder="Coupon Code" />
											<button type="submit" asp-action="ApplyCoupon" class="btn btn-primary bg-gradient">Apply</button>
										</div>
									}
								</li>

								<li class="list-group-item d-flex justify-content-between align-items-center bg-light">
									<h5 class="fw-bold text-secondary">Total (Inc. Tax)</h5>
									<h4 class="fw-bolder">@Model.OrderTotal.ToString("c")</h4>
								</li>
							</ul>
							<div class="d-grid gap-2">
								@if (Model.ShoppingCartList.Count() > 0)
								{
									<a asp-action="Summary" class="btn btn-primary bg-gradient py-2 form-control">Summary</a>
								}
								else
								{
									<button disabled class="btn btn-secondary bg-gradient py-2 form-control">Cart is Empty</button>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>