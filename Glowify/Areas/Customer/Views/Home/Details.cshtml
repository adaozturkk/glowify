@model Glowify.Models.ShoppingCart

<form method="post">
    <input asp-for="ProductId" hidden />

    <div class="container mt-5">

        <div class="mb-4">
            <a asp-action="Index" class="text-decoration-none text-muted small">
                <i class="bi bi-arrow-left"></i> Back to Shop
            </a>
        </div>

        <div class="row">
            <div class="col-lg-5 col-md-12 mb-5">
                <div class="p-3 border-0">
                    <div style="position: relative; overflow: hidden; border-radius: 20px;">
                        <img src="@(string.IsNullOrEmpty(Model.Product.ImageUrl) ? "https://placehold.co/500x600/png" : Model.Product.ImageUrl)"
                             class="img-fluid w-100 shadow-sm"
                             style="object-fit: cover; border-radius: 20px; max-height: 500px;"
                             alt="@Model.Product.Name" />

                        @if (Model.Product.Stock <= 0)
                        {
                            <span class="position-absolute top-0 start-0 bg-dark text-white px-3 py-2 m-3 rounded-pill text-uppercase small fw-bold shadow">Sold Out</span>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-7 col-md-12">
                <div class="ps-lg-4">

                    <div class="mb-3">
                        <span class="badge bg-light text-dark border rounded-pill px-3 py-2 text-uppercase" style="letter-spacing: 1px;">
                            @Model.Product.Category
                        </span>
                        <span class="badge bg-secondary bg-opacity-10 text-dark rounded-pill px-3 py-2 ms-2">
                            <i class="bi bi-stars"></i> @Model.Product.TargetSkinType Skin
                        </span>
                    </div>

                    <h1 class="fw-bold text-dark display-6 mb-1">@Model.Product.Name</h1>
                    <p class="text-muted small text-uppercase fw-bold mb-4" style="letter-spacing: 2px;">Glowify Skincare</p>

                    <div class="mb-4">
                        @if (Model.Product.ListPrice > Model.Product.Price)
                        {
                            <span class="text-decoration-line-through text-muted fs-5 me-2">
                                @Model.Product.ListPrice.ToString("c")
                            </span>
                            <span class="text-danger fw-bold display-6">
                                @Model.Product.Price.ToString("c")
                            </span>
                        }
                        else
                        {
                            <span class="text-dark fw-bold display-6">
                                @Model.Product.Price.ToString("c")
                            </span>
                        }
                    </div>

                    <p class="text-secondary lead mb-4" style="font-size: 1.1rem;">
                        @Model.Product.Description
                    </p>

                    <div class="bg-light p-4 rounded-3 mb-4 border border-light">
                        @if (!string.IsNullOrEmpty(Model.Product.MainIngredient))
                        {
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-droplet-fill text-primary me-2"></i>
                                <strong class="text-dark me-2">Key Ingredient:</strong>
                                <span class="text-secondary">@Model.Product.MainIngredient</span>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Product.IngredientsList))
                        {
                            <hr class="text-muted opacity-25 my-2">
                            <small class="text-muted d-block mt-2">
                                <strong>Full Ingredients:</strong> @Model.Product.IngredientsList
                            </small>
                        }
                    </div>

                    <div class="mb-4">
                        @if (Model.Product.Stock > 10)
                        {
                            <div class="text-success fw-bold d-flex align-items-center">
                                <i class="bi bi-check-circle-fill me-2"></i> In Stock & Ready to Ship
                            </div>
                        }
                        else if (Model.Product.Stock > 0 && Model.Product.Stock <= 10)
                        {
                            <div class="text-warning fw-bold d-flex align-items-center">
                                <i class="bi bi-exclamation-circle-fill me-2"></i> Low Stock - Only @Model.Product.Stock left!
                            </div>
                        }
                        else
                        {
                            <div class="text-danger fw-bold d-flex align-items-center">
                                <i class="bi bi-x-circle-fill me-2"></i> Currently Out of Stock
                            </div>
                        }
                    </div>

                    <div class="row g-2 align-items-center mt-4">
                        @if (Model.Product.Stock > 0)
                        {
                            <div class="col-3">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-dark border-end-0 rounded-start-pill text-muted small" style="height: 45px;">Qty</span>
                                    <input asp-for="Count" type="number" value="1" min="1" max="@Model.Product.Stock"
                                           class="form-control border-dark border-start-0 text-center fw-bold rounded-end-pill"
                                           placeholder="1" style="height: 45px; padding-left:0;">
                                </div>
                            </div>
                            <div class="col-9">
                                <button type="submit" class="btn btn-dark w-100 rounded-pill text-uppercase fw-bold shadow-sm hover-effect d-flex align-items-center justify-content-center"
                                        style="height: 45px;">
                                    Add to Cart
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .hover-effect {
        transition: all 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2) !important;
        }
</style>